def load_json(filename, default=None):
    assert COMMENT_JSON is not None, "loading json requires JsonComment"
    try:
        with open(filename, "r") as fp:
            return COMMENT_JSON.load(fp)
    except FileNotFoundError, ValueError:
        return default


